# Google translate
translate() {
  lng="$1";shift;
  wget -U "Mozilla/5.0" -qO -                                                         \
  "http://translate.google.com/translate_a/t?client=t&text=${@// /+}&sl=auto&tl=$lng" \
  | sed 's/\[\[\[\"//' | cut -d \" -f 1
}

# Wikipedia
