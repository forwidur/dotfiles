# Youtube
youtube() {
  mplayer -cookies -cookies-file /tmp/ytcookie.txt   \
      $(youtube-dl -g --cookies /tmp/ytcookie.txt "$1")
}

# Cmdlinefu
cmdfu(){
  param="$@"
  param="${param// /+}"
  curl "http://www.commandlinefu.com/commands/matching/${param}/$(echo -n ${param} | \
      openssl base64)/plaintext";
}

